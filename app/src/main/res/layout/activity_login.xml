<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="by.orion.onlinertasks.presentation.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_login_logo_30dp"
            android:src="@drawable/ic_login_logo"
            tools:ignore="ContentDescription" />

        <!-- Username or email -->
        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputedittext_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_login_username_60dp"
            android:background="@drawable/bg_rounded_input_field"
            android:hint="@string/msg_login_username_or_email"
            android:inputType="text"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_login_username_18dp" />

        <!-- Password -->
        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputedittext_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_login_password_10dp"
            android:inputType="textPassword"
            android:hint="@string/msg_login_password"
            android:gravity="center_vertical"
            android:background="@drawable/bg_rounded_input_field"
            android:padding="@dimen/padding_login_password_18dp"/>

        <Button
            android:id="@+id/button_login_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_login_button_sign_in_20dp"
            android:layout_marginLeft="@dimen/margin_left_right_login_button_sign_in_70dp"
            android:layout_marginRight="@dimen/margin_left_right_login_button_sign_in_70dp"
            android:text="@string/msg_login_sign_in"
            style="@style/AppTheme.Button.Green"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
