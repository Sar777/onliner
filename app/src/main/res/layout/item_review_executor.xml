<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="@dimen/min_height_review_executor_72dp">

    <ImageView
        android:id="@+id/imageview_review_executor"
        android:layout_width="@dimen/size_review_executor_avatar_60dp"
        android:layout_height="@dimen/size_review_executor_avatar_60dp"
        android:layout_marginTop="@dimen/margin_top_left_review_executor_avatar_16dp"
        android:layout_marginLeft="@dimen/margin_top_left_review_executor_avatar_16dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_left_review_executor_layout_text_16dp"
        android:layout_marginRight="@dimen/margin_right_left_review_executor_layout_text_16dp"
        android:paddingTop="@dimen/padding_top_bottom_review_executor_layout_text_16dp"
        android:paddingBottom="@dimen/padding_top_bottom_review_executor_layout_text_16dp"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_review_executor_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="left"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/textview_review_executor_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_review_executor_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:id="@+id/textview_review_executor_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <RatingBar
            android:id="@+id/ratingbar_review_executor_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top_review_executor_rating_5dp"
            android:numStars="5"
            android:stepSize="0.1"
            style="?android:attr/ratingBarStyleSmall"/>
    </LinearLayout>
</LinearLayout>